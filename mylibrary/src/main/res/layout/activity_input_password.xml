<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置PIN码"
            android:textColor="@color/txt_color"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="colse"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <com.cfca.mobile.hke.sipedit.SipEditText
        android:id="@+id/set_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="13dp"
        android:background="@null"
        android:textColorHint="@color/hint_color"
        android:hint="请输入PIN码"
        android:padding="10dp"
        android:textCursorDrawable="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/set_password"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@color/hint_color" />

    <com.cfca.mobile.hke.sipedit.SipEditText
        android:id="@+id/set_repassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_password"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:background="@null"
        android:hint="请确认PIN码"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        android:textCursorDrawable="@null" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/set_repassword"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@color/hint_color" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_repassword"
        android:layout_margin="13dp"
        android:background="#3388ff"
        android:gravity="center"
        android:onClick="onCLick"
        android:padding="13dp"
        android:text="确  定"
        android:textColor="@color/white" />

</RelativeLayout>